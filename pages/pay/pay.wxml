<!-- 支付页面 -->
<view class="cart">
  <!-- 收货地址 -->
  <view class="receiver_address_wrap">
    <view class="receiver_address_info">
      <view class="user_name">收货人：{{address.userName}}</view>
      <view class="user_address">{{address.all}}</view>
    </view>
    <view class="receiver_address_phone">{{address.telNumber}}</view>
  </view>
  <!-- 待支付商品 -->
  <view class="cart_content">
    <view class="cart_title">购物车</view>
    <!-- 待支付商品列表 -->
    <view class="cart_main">
      <view class="cart_item" wx:for="{{cart}}" wx:key="goods_id">
        <!-- 商品图片 -->
        <navigator class="cart_img_wrap">
          <image mode="widthFix" src="{{item.goods_small_logo ? item.goods_small_logo : 'http://image2.suning.cn/uimg/b2c/newcatentries/0070177617-000000000618993401_2_400x400.jpg'}}" />
        </navigator>
        <!-- 商品信息 -->
        <view class="cart_info_wrap">
          <view class="goods_name">{{item.goods_name}}</view>
          <view class="goods_price_wrap">
            <view class="goods_price">￥{{item.goods_price}}</view>
            <view class="cart_num_tool">
              <view class="goods_num">x {{item.num}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- 底部工具栏 -->
  <view class="footer_tool">
    <!-- 总价格 -->
    <view class="total_price_wrap">
      <view class="total_price" style="font-weight: bold">
        合计：
        <text class="total_price_text">￥{{totalPrice}}</text>
      </view>
      <view>包含运费</view>
    </view>
    <!-- 支付 -->
    <view class="order_pay_wrap" bindtap="handleOrderPay">支付({{totalNum}})</view>
  </view>
</view>