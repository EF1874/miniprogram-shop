page {
  background-color: #edece8;
}
.login {
  background-color: var(--themeColor);
  width: 100%;
  height: 40vh;
  padding-top: 20%;
  color: #fff;
}
.login navigator {
  padding: 20rpx;
  border: 1rpx solid greenyellow;
  margin: 0 auto;
  text-align: center;
  width: 150rpx;
}
.user_info_container {
  position: relative;
  height: 40vh;
  color: var(--themeColor);
}
.user_info_container .user_bg_image_wrap .user_bg_image {
  filter: blur(10rpx);
}
.user_info_container .user_info_wrap {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.user_info_container .user_info_wrap .user_avatar {
  flex: 1;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_container .user_info_wrap .user_name {
  flex: 1;
  color: #fff;
  margin-top: 40rpx;
}
.user_content_container {
  position: relative;
}
.user_content_container .user_main {
  color: #666;
  padding-bottom: 100rpx;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.user_content_container .user_main .history_wrap {
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
}
.user_content_container .user_main .history_wrap navigator .his_num {
  flex: 1;
  text-align: center;
  color: var(--themeColor);
}
.orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}
.orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.orders_wrap .order_content {
  display: flex;
}
.orders_wrap .order_content navigator {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
}
.orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
.app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.app_info_wrap .app_info_item {
  padding: 20rpx;
}
.app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.recommed_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}
