<view class="goods_detail_container">
  <!-- 轮播图 -->
    <swiper indicator-dots autoplay circular class="goods_detail_swiper">
      <swiper-item class="goods_detail_swiper_item"
      wx:for="{{goodsInfo.pics}}"
      wx:for-item="swiperItem"
      wx:for-index="swiperIndex"
      wx:key="pics_id">
        <image mode="widthFix" src="{{swiperItem.pics_mid}}" bindtap="previewImage"
        data-url="{{swiperItem.pics_mid}}" />
      </swiper-item>
    </swiper>
    <!-- 商品名称价格 -->
    <view class="goods_price"><text >￥{{goodsInfo.goods_price}}</text></view>
    <view class="goods_name_container">
      <view class="goods_name">{{goodsInfo.goods_name}}</view>
      <view class="goods_like "><i class="iconfont icon-shoucang_icon"></i><text >收藏</text></view>
    </view>
    <!-- 图文详情 -->
    <view class="rich_text_wrap">
      <view class="rich_text_header"><text >图文详情</text></view>
      <rich-text nodes="{{goodsInfo.goods_introduce}}"></rich-text>
    </view>
    <!-- 底部栏 -->
    <view class="btm_tool">
      <view class="tool_item">
        <i class="iconfont icon-kefu"></i>
        <view>联系客服</view>
        <button open-type="contact"></button>
      </view>
      <view class="tool_item">
        <i class="iconfont icon-fenxiang"></i>
        <view>分享</view>
        <button open-type="share"></button>
      </view>
      <navigator open-type="switchTab" url="/pages/cart/cart" class="tool_item">
        <i class="iconfont icon-gouwuche"></i>
        <view>购物车</view>
      </navigator>
      <view class="tool_item btn_cart">
        加入购物车
      </view>
      <view class="tool_item btn_buy">
        立即购买
      </view>
    </view>
</view>