<view class="category_container">
  <!-- 搜索框 -->
  <SearchInput></SearchInput>
  <view class="cate_container">
    <scroll-view scroll-y="true" class="left_menu" scroll-top="true">
      <view class="left_menu_list" wx:for="{{leftMenuList}}" wx:for-item="leftMenu" wx:for-index="leftMenuIndex" wx:key="*this">
        <navigator>{{leftMenu}}</navigator>
      </view>
    </scroll-view>
    <scroll-view class="right_content" scroll-y scroll-top>
      <view class="goods_title_container" wx:for="{{rightContent}}" wx:for-item="goodsTitle" wx:for-index="goodsTitleIndex" wx:key="cat_id">
        <view class="goods_title">/{{goodsTitle.cat_name}}/</view>
        <view class="goods_list">
          <navigator wx:for="{{goodsTitle.children}}" wx:for-item="goodsList" wx:key="cat_id">
            <image mode="widthFix" src="{{goodsList.cat_icon}}" />
            <text>{{goodsList.cat_name}}</text>
          </navigator>
        </view>
      </view>
    </scroll-view>
  </view>
</view>