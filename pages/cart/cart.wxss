page {
  padding-bottom: 90rpx;
}
.cart .receiver_address_btn_wrap {
  padding: 20rpx;
}
.cart .receiver_address_wrap {
  display: flex;
  padding: 20rpx;
}
.cart .receiver_address_wrap .receiver_address_info {
  flex: 5;
}
.cart .receiver_address_wrap .receiver_address_phone {
  flex: 3;
  text-align: right;
}
.cart .cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  border-bottom: 1rpx solid #eb4450;
  border-top: 1rpx solid #eb4450;
}
.cart .cart_content .cart_main .cart_item {
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
}
.cart .cart_content .cart_main .cart_item .cart_chk_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart_content .cart_main .cart_item .cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .cart_content .cart_main .cart_item .cart_img_wrap image {
  width: 80%;
}
.cart .cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart .cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .num_edit {
  width: 55rpx;
  height: 55rpx;
  border: 1rpx solid #e6e6e6;
  text-align: center;
  line-height: 55rpx;
}
.cart .cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  text-align: center;
  line-height: 55rpx;
}
.cart .footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
  display: flex;
}
.cart .footer_tool .all_chk_wrap {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart .footer_tool .total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.cart .footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.cart .footer_tool .order_pay_wrap {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}
