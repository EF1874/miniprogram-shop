<!-- 购物车 -->
<view class="cart">
  <!-- 获取收货地址按钮 -->
  <view class="receiver_address_btn_wrap" wx:if="{{!address.userName}}">
    <button bindtap="chooseAddress" type="primary" plain>获取收货地址</button>
  </view>
  <!-- 收货地址 -->
  <view class="receiver_address_wrap" wx:else>
    <view class="receiver_address_info">
      <view class="user_name">收货人：{{address.userName}}</view>
      <view class="user_address">{{address.all}}</view>
    </view>
    <view class="receiver_address_phone">{{address.telNumber}}</view>
  </view>

  <!-- 购物车内容 -->
  <view class="cart_content">
    <view class="cart_title">购物车</view>
    <!-- 购物车为空时显示的内容 -->
    <view class="cart_main" wx:if="{{cart.length === 0}}">购物车空空如也</view>
    <!-- 购物车商品列表 -->
    <view class="cart_main" wx:else>
      <view class="cart_item" wx:for="{{cart}}" wx:key="goods_id">
        <!-- 复选框 -->
        <view class="cart_chk_wrap">
          <checkbox-group bindchange="checkboxChange" data-goods_id="{{item.goods_id}}">
            <checkbox checked="{{item.checked}}" />
          </checkbox-group>
        </view>
        <!-- 商品图片 -->
        <navigator class="cart_img_wrap">
          <image mode="widthFix" src="{{item.goods_small_logo ? item.goods_small_logo : 'http://image2.suning.cn/uimg/b2c/newcatentries/0070177617-000000000618993401_2_400x400.jpg'}}" />
        </navigator>
        <!-- 商品信息 -->
        <view class="cart_info_wrap">
          <view class="goods_name">{{item.goods_name}}</view>
          <view class="goods_price_wrap">
            <view class="goods_price">￥{{item.goods_price}}</view>
            <view class="cart_num_tool">
              <view class="num_edit" bindtap="numReduce" data-goods_id="{{item.goods_id}}">-</view>
              <view class="goods_num">{{item.num}}</view>
              <view class="num_edit"  bindtap="numAdd" data-goods_id="{{item.goods_id}}">+</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部工具栏 -->
  <view class="footer_tool">
    <!-- 全选 -->
    <view class="all_chk_wrap">
      <checkbox-group bindchange="allCheckedChange" >
        <checkbox checked="{{allChecked}}" />全选
      </checkbox-group>
    </view>
    <!-- 总价格 -->
    <view class="total_price_wrap">
      <view class="total_price">
        合计：<text class="total_price_text">￥{{totalPrice}}</text>
      </view>
      <view>包含运费</view>
    </view>
    <!-- 结算 -->
    <view class="order_pay_wrap">结算({{totalNum}})</view>
  </view>
</view>